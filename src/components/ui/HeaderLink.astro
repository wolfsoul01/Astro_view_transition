---
export interface Props {
  ref?: string;
}
const { ref } = Astro.props;
---

<a
  href={ref}
  class="font-semibold text-white/70 hover:scale-110 hover:text-white hover:bg-slate-700 py-2 px-5 rounded-lg duration-200 transition-all flex items-center gap-1 cursor-pointer"
>
  <slot name="before" />
  <slot>
    <slot name="After" />
  </slot>
</a>
